{% extends 'base.html.twig' %}

{% block title %}Vote: {{ vote.title }}{% endblock %}

{% block body %}
    <div>
        <div>{{ vote.id }}</div>
        <div>Title: <a href="{{ path('app_vote_view', {vote: vote.id}) }}">{{ vote.title }}</a></div>
        <div>{{ vote.description }}</div>
        <div><img src="/upload/vote/{{ vote.image }}" alt=""></div>
        <div>Username: {{ vote.user.username }}</div>
    </div>
    <br>

    {% if is_granted('ROLE_USER') %}
        {{ form(form) }}
    {% endif %}
{% endblock %}
